{
  "name": "dnase-eval-bam-pe",
  "title": "Evaluate pe bam",
  "summary": "Evaluates (paired-end) bam and returns with chrM filtered out and small sample for the ENCODE DNase-seq pipeline",
  "dxapi": "1.0.0",
  "version": "0.2.1",
  "authorizedUsers": [],
  "inputSpec": [
    {
      "name": "bam_sized",
      "label": "Paired-end bam filtered and sized",
      "class": "file",
      "optional": false,
      "patterns": [ "*_filtered_sized.bam" ]
    },
    {
      "name": "sample_size",
      "label": "Number of bam reads to sample",
      "class": "int",
      "optional": true,
      "default": 15000000
    },
    {
      "name": "nthreads",
      "label": "Number of threads to use",
      "class": "int",
      "optional": true,
      "default": 8
    }
  ],
  "outputSpec": [
    {
      "name": "bam_no_chrM",
      "label": "Bam file without chrM",
      "class": "file",
      "patterns": ["*_no_chrM.bam"]
    },
    {
      "name": "bam_no_chrM_stats",
      "label": "No chrM bam 'edwBamStats' output",
      "class": "file",
      "patterns": ["*_sample_stats.txt"]
    },
    {
      "name": "bam_sample",
      "label": "Sample of bam filtered and without chrM",
      "class": "file",
      "patterns": ["*_sample.bam"]
    },
    {
      "name": "bam_sample_stats",
      "label": "Sample bam 'edwBamStats' output",
      "class": "file",
      "patterns": ["*_sample_stats.txt"]
    },
    {
      "name": "bam_sample_spp",
      "label": "Sample bam 'Rscript run_spp.R' output",
      "class": "file",
      "patterns": ["*_sample_spp.txt"]
    },
    {
      "name": "bam_sample_pbc",
      "label": "Sample bam 'PBC' output",
      "class": "file",
      "patterns": ["*_sample_pbc.txt"]
    },
    {
      "name": "metadata",
      "label": "JSON formatted string of metadata",
      "class": "string"
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/dnase-eval-bam-pe.sh",
    "systemRequirements": {
      "main": {
        "instanceType": "mem3_hdd2_x8"
      },
      "myEntryPoint": {
        "instanceType": "mem3_hdd2_x8"
      }
    },
    "execDepends": [
        { "name": "gawk" }
    ]
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "categories": [
    "ENCODE"
  ]
}
