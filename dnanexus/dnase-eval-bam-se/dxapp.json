{
  "name": "dnase-eval-bam-se",
  "title": "Evaluate se bam",
  "summary": "Evaluates (single-end) bam and returns with chrM filtered out and small sample for the ENCODE DNase-seq pipeline",
  "dxapi": "1.0.0",
  "version": "0.2.1",
  "authorizedUsers": [],
  "inputSpec": [
    {
      "name": "bam_sized",
      "label": "Single-ended bam filtered and sized",
      "class": "file",
      "optional": false,
      "patterns": [ "*_filtered_sized.bam" ]
    },
    {
      "name": "sample_size",
      "label": "Number of bam reads to sample",
      "class": "int",
      "optional": true,
      "default": 15000000
    }
  ],
  "outputSpec": [
    {
      "name": "bam_no_chrM",
      "label": "Bam file without chrM",
      "class": "file",
      "patterns": ["*_no_chrM.bam"]
    },
    {
      "name": "bam_no_chrM_qc",
      "label": "No chrM bam 'edwBamStats' output",
      "class": "file",
      "patterns": ["*_no_chrM_qc.txt"]
    },
    {
      "name": "bam_sample",
      "label": "Sample of bam filtered and without chrM",
      "class": "file",
      "patterns": ["*_sample.bam"]
    },
    {
      "name": "bam_sample_qc",
      "label": "Sample bam qc: edwBamStats, spp and PBC output",
      "class": "file",
      "patterns": ["*_sample_qc.txt"]
    },
    {
      "name": "reads",
      "label": "Count of reads in the no chrM bam",
      "optional": true,
      "class": "string"
    },
    {
      "name": "metadata",
      "label": "JSON formatted string of metadata",
      "class": "string"
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/dnase-eval-bam-se.sh",
    "systemRequirements": {
      "main": {
        "instanceType": "mem3_hdd2_x8"
      },
      "myEntryPoint": {
        "instanceType": "mem3_hdd2_x8"
      }
    },
    "execDepends": [
        { "name": "gawk" }
    ]
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "categories": [
    "ENCODE"
  ]
}
