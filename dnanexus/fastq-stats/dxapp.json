{
  "name": "fastq-stats",
  "title": "Fastq file statistics",
  "summary": "Gather fastq file statistics for the ENCODE DNase-seq pipeline",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "authorizedUsers": [],
  "inputSpec": [
    {
      "name": "fastq_file",
      "label": "Fastq file (single or paired-end)",
      "class": "array:file",
      "optional": false,
      "patterns": ["*.fq.gz","*.fastq.gz"]
    }
  ],
  "outputSpec": [
    {
      "name": "fastq_qc",
      "label": "Text file with fastq stats",
      "class": "file",
      "patterns": ["*.txt"]
    },
    {
      "name": "metadata",
      "label": "JSON formatted string of metadata",
      "class": "string"
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/fastq-stats.sh",
    "systemRequirements": {
      "main": {
        "instanceType": "mem3_hdd2_x8"
      },
      "myEntryPoint": {
        "instanceType": "mem3_hdd2_x8"
      }
    }
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "categories": [
    "ENCODE"
  ]
}
