{
  "name": "sample-hotspots",
  "title": "Call sample of hotspots",
  "summary": "Call a sample of peaks with 'hotspot' for the ENCODE DNase-seq pipeline",
  "dxapi": "1.0.0",
  "version": "0.2.0",
  "authorizedUsers": [],
  "inputSpec": [
    {
      "name": "bam_no_chrM",
      "label": "Filtered bam file without chrM",
      "class": "file",
      "optional": false,
      "patterns": ["*_no_chrM.bam"]
    },
    {
      "name": "chrom_sizes",
      "label": "chomosome/name length file",
      "class": "file",
      "optional": false,
      "patterns": ["*chrom.sizes"]
    },
    {
      "name": "read_length",
      "label": "Length of reads in bam file",
      "class": "int",
      "optional": true,
      "choices": [32, 36, 40, 50, 58, 72, 76, 100],
      "default": 100
    },
    {
      "name": "genome",
      "label": "Genome this is for",
      "class": "string",
      "optional": true,
      "choices": ["hg19","hg38","mm10"],
      "default": "hg19"
    }
  ],
  "outputSpec": [
    {
      "name": "bam_sample_5M",
      "label": "Sample of 5 million reads bam",
      "class": "file",
      "patterns": ["*_sample_5M.bam"]
    },
    {
      "name": "hotspot_sample_5M_qc",
      "label": "Sample of 5 million reads hotspot output",
      "class": "file",
      "patterns": ["*_sample_5M_hotspot_qc.txt"]
    },
    {
      "name": "metadata",
      "label": "JSON formatted string of metadata",
      "class": "string"
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/sample-hotspots.sh",
    "systemRequirements": {
      "main": {
        "instanceType": "mem3_hdd2_x8"
      },
      "myEntryPoint": {
        "instanceType": "mem3_hdd2_x8"
      }
    }
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "categories": [
    "ENCODE"
  ]
}
